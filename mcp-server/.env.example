# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Firestore Configuration (optional for persistence)
GOOGLE_APPLICATION_CREDENTIALS=path/to/serviceAccountKey.json
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_EMULATOR_HOST=localhost:8080  # Only for local development

# API Security
API_KEY=your-super-secret-api-key-change-this
ADMIN_API_KEY=your-admin-api-key-change-this

# Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8001
LOG_LEVEL=INFO
ENVIRONMENT=development

# Context Configuration
DEFAULT_CONTEXT_TTL=3600
MAX_CONTEXT_SIZE_MB=10
ENABLE_FIRESTORE_PERSISTENCE=false

# Tool Execution Configuration
DEFAULT_TOOL_TIMEOUT=60
MAX_TOOL_RETRIES=3
CIRCUIT_BREAKER_THRESHOLD=5

# Workflow Configuration
MAX_WORKFLOW_TIMEOUT=300
MAX_CONCURRENT_STEPS=5

# External API Keys (for tool integrations)
GROQ_API_KEY=your-groq-api-key
GEMINI_API_KEY=your-gemini-api-key
OLLAMA_BASE_URL=http://localhost:11434
OPENALEX_EMAIL=your-email@example.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to get user role from users collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Users collection - stores minimal role reference
    match /users/{userId} {
      // Users can only read their own role document
      allow read: if isOwner(userId);
      
      // Only allow creation during signup (auth user doesn't exist yet in Firestore)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Prevent updates and deletes (role should not change)
      allow update, delete: if false;
    }
    
    // Students collection - detailed student profiles
    match /students/{studentId} {
      // Students can read and write only their own profile
      allow read, write: if isOwner(studentId);
      
      // Allow creation only if user is authenticated and creating their own document
      allow create: if isAuthenticated() 
                    && request.auth.uid == studentId
                    && request.resource.data.email == request.auth.token.email;
      
      // Ensure students can only update their own data, not change email
      allow update: if isOwner(studentId) 
                    && request.resource.data.email == resource.data.email;
    }
    
    // Teachers collection - detailed teacher profiles
    match /teachers/{teacherId} {
      // Anyone authenticated can read teacher profiles (needed for dropdown selection)
      allow read: if isAuthenticated();
      
      // Teachers can only write their own profile
      allow write: if isOwner(teacherId);
      
      // Allow creation only if user is authenticated and creating their own document
      allow create: if isAuthenticated() 
                    && request.auth.uid == teacherId
                    && request.resource.data.email == request.auth.token.email;
      
      // Ensure teachers can only update their own data, not change email
      allow update: if isOwner(teacherId) 
                    && request.resource.data.email == resource.data.email;
    }
    
    // Reprography Admins collection - detailed admin profiles
    match /reprography_admins/{adminId} {
      // Anyone authenticated can read admin profiles
      allow read: if isAuthenticated();
      
      // Admins can only write their own profile
      allow write: if isOwner(adminId);
      
      // Allow creation only if user is authenticated and creating their own document
      allow create: if isAuthenticated() 
                    && request.auth.uid == adminId
                    && request.resource.data.email == request.auth.token.email;
      
      // Ensure admins can only update their own data, not change email
      allow update: if isOwner(adminId) 
                    && request.resource.data.email == resource.data.email;
    }
    
    // Subjects collection - public read, restricted write
    match /subjects/{subjectId} {
      // Anyone (authenticated or not) can read subjects
      allow read: if true;
      
      // Only teachers can create, update, or delete subjects
      allow create, update, delete: if isAuthenticated() && getUserRole() == 'teacher';
    }
    
    // No-Due Submissions collection
    match /noDueSubmissions/{submissionId} {
      // Students can read their own submissions
      // Teachers can read submissions assigned to them
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        resource.data.teacherId == request.auth.uid
      );
      
      // Only students can create submissions
      allow create: if isAuthenticated() 
                    && getUserRole() == 'student'
                    && request.resource.data.studentId == request.auth.uid;
      
      // Only the assigned teacher can update the submission (approve/reject)
      allow update: if isAuthenticated() 
                    && getUserRole() == 'teacher'
                    && resource.data.teacherId == request.auth.uid;
      
      // No one can delete submissions (maintain audit trail)
      allow delete: if false;
    }
    
    // No-Due Clearance collection (legacy - keeping for backward compatibility)
    match /noDueClearance/{clearanceId} {
      // Students can read their own clearance status
      // Teachers can read clearances for their department
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        getUserRole() == 'teacher'
      );
      
      // Only students can create their own no-due requests
      allow create: if isAuthenticated() 
                    && getUserRole() == 'student'
                    && request.resource.data.studentId == request.auth.uid;
      
      // Only teachers can update no-due status (approve/reject)
      allow update: if isAuthenticated() && getUserRole() == 'teacher';
      
      // No one can delete clearance records
      allow delete: if false;
    }
    
    // Approvals collection - for tracking teacher approvals
    match /approvals/{approvalId} {
      // Students can read their own approval records
      // Teachers can read all approvals
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        getUserRole() == 'teacher'
      );
      
      // Only authenticated users can write approval status
      allow write: if isAuthenticated();
    }
    
    // Research Papers collection (if needed for the portal)
    match /researchPapers/{paperId} {
      // Anyone can read research papers (public data)
      allow read: if true;
      
      // Only authenticated users can create research entries
      allow create: if isAuthenticated();
      
      // Users can update their own research papers
      allow update: if isAuthenticated() && resource.data.authorId == request.auth.uid;
      
      // Users can delete their own research papers
      allow delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
    }
    
    // Print Requests collection - for reprography admin print queue
    match /printRequests/{requestId} {
      // Students can read their own print requests
      // Reprography admins can read all requests
      allow read: if isAuthenticated() && (
        (resource != null && resource.data.studentId == request.auth.uid) ||
        getUserRole() == 'reprography_admin' ||
        getUserRole() == 'student'
      );
      
      // Only students can create print requests for approved submissions
      allow create: if isAuthenticated() 
                    && getUserRole() == 'student'
                    && request.resource.data.studentId == request.auth.uid;
      
      // Only reprography admins can update print request status
      allow update: if isAuthenticated() && getUserRole() == 'reprography_admin';
      
      // No one can delete print requests (maintain audit trail)
      allow delete: if false;
    }
    
    // No-Due Approvals collection - for parallel approval workflow
    match /noDueApprovals/{approvalId} {
      // Students can read their own approval requests
      // Teachers can read approval requests assigned to them
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        resource.data.teacherId == request.auth.uid
      );
      
      // Only students can create approval requests
      allow create: if isAuthenticated() 
                    && getUserRole() == 'student'
                    && request.resource.data.studentId == request.auth.uid;
      
      // Update rules:
      // - Teachers can update approval status (approve/reject)
      // - Students can resubmit their own rejected requests
      allow update: if isAuthenticated() && (
        (getUserRole() == 'teacher' && resource.data.teacherId == request.auth.uid) ||
        (getUserRole() == 'student' && resource.data.studentId == request.auth.uid && resource.data.status == 'rejected')
      );
      
      // No one can delete approval requests (maintain audit trail)
      allow delete: if false;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
